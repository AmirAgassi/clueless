
{
  "name": "vfile",
  "version": "6.0.3",
  "description": "Virtual file format for text processing",
  "license": "MIT",
  "repository": "vfile/vfile",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "sideEffects": false,
  "type": "module",
  "exports": "./index.js",
  "imports": {
    "#minpath": {
      "node": "./lib/minpath.js",
      "default": "./lib/minpath.browser.js"
    },
    "#minproc": {
      "node": "./lib/minproc.js",
      "default": "./lib/minproc.browser.js"
    },
    "#minurl": {
      "node": "./lib/minurl.js",
      "default": "./lib/minurl.browser.js"
    }
  },
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/unist": "^3.0.0",
    "vfile-message": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "c8": "^10.0.0",
    "prettier": "^3.0.0",
    "remark-cli": "^12.0.0",
    "remark-preset-wooorm": "^10.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.59.0"
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm",
      [
        "remark-lint-no-html",
        false
      ]
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  }
